<UserControl
    x:Class="Hack4Europe.UserControls.HomePageItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource DarkGrey}"
    Loaded="HomePageItemControl_OnLoaded">

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="7*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="{Binding Icon}" Stretch="Uniform" Margin="10"></Image>
            <TextBlock Grid.Column="1" FontSize="25" Text="{Binding Title}" VerticalAlignment="Center" Margin="10,0,0,0"></TextBlock>
        </Grid>
        <Border BorderThickness="2" BorderBrush="{StaticResource LightBlue}" Height="2"/>
    </StackPanel>
  
    
</UserControl>
